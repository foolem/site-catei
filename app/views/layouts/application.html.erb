<!DOCTYPE html>
<html>
  <head>
    <title>SiteCatei</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://unpkg.com/feather-icons"></script>
  </head>

  <body>
    <div id="container-full" class="container-full">
      <% flash.each do |key, value| %>
        <div id="alert" class="alert alert-<%= key %> animated slideInDown"> <span> <%= value %> </span> <i id="close" data-feather="x" class="close"></i> </div>
      <% end %>
      <div class="logo-satads">
        <%= image_tag("satads_logo_escrito.png", class: "logo-satads-img animated fast slideInDown") %>
      </div>
      <div class="container-content box-shadow">
        <div class="animated fadeIn">

          <%= yield %>
        </div>
      </div>
    </div>
    <div class="post-container">
    </div>
    <script type="text/javascript">
      feather.replace()
      document.getElementById("close").addEventListener("click", function(){
          document.getElementById("alert").classList.add("animated", "slideOutUp", "fast");
          document.getElementById("container-full").getElementById("alert").removeChild();
      });
    </script>
  </body>
</html>
