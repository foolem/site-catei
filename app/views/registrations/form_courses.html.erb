<%= form_with(model: @participant, url: { action: "add_course_to_participant" }, method: 'post') do |form| %>
<div class="form">
  <% if @participant.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@participant.errors.count, "error") %> prohibited this registration from being saved:</h2>

    <ul>
      <% @participant.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%= hidden_field_tag 'id', @participant.id %>
  <div class="field">
    <label for="registration_course">Curso</label>
    <%= form.select :course, options_from_collection_for_select(Course.all, 'id', 'name' ""), {}, class: 'select bigger-select' %>
  </div>

  <div class="actions p-0">
    <%= form.submit "Enviar", class: "submit" %>
  </div>
</div>
<% end %>
<%= link_to registration_courses_path do %>
<i data-feather="arrow-left" class="bigger-icon"></i>
<% end %>
