<%= form_with(model: registration, local: true) do |form| %>
<div class="form">
  <% if registration.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

    <ul>
      <% registration.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <label for="registration_name">Nome</label>
    <%= form.text_field :name, id: :registration_name, placeholder: 'Nome completo', class: 'text_area' %>
  </div>

  <div class="field">
    <label for="registration_email">Email</label>
    <%= form.text_field :email, id: :registration_email, placeholder: 'Seu email', class: 'text_area' %>
  </div>

  <div class="field">
    <label for="registration_grr">GRR</label>
    <%= form.text_field :grr, id: :registration_grr, placeholder: 'GRRXXXXXXXX', class: 'text_area' %>
  </div>

  <div class="field">
    <label for="registration_cpf">CPF</label>
    <%= form.text_field :cpf, id: :registration_cpf, placeholder: 'XXX.XXX.XXX-XX', class: 'text_area' %>
  </div>

  <div class="field">
    <label for="registration_turn">Turno</label>
    <%= form.select :turn, options_for_select(turns, ""), {}, class: 'select' %>
  </div>
  
  <div class="actions p-0">
    <%= form.submit "Enviar", class: "submit" %>
  </div>

</div>
<% end %>
<script type="text/javascript">
  document.getElementById("container-full").removeChild(document.getElementById("alert"));
</script>
